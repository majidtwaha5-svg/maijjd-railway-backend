# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/maijjd_production
REDIS_URI=redis://username:password@redis-host:port

# JWT & Security
JWT_SECRET=maijjd-super-secure-jwt-secret-2025-with-face-recognition
JWT_EXPIRES_IN=12h
JWT_REFRESH_EXPIRES_IN=14d

# CORS & Domains
CORS_ORIGIN=https://maijjd.com,https://www.maijjd.com
BACKEND_URL=https://api.maijjd.com
FRONTEND_URL=https://maijjd.com

# Face Recognition
FACE_RECOGNITION_ENABLED=true
FACE_MATCHING_THRESHOLD=0.6

# Production
NODE_ENV=production
PORT=5003
LOG_LEVEL=info

# MJND Agent
MJND_AGENT_ENABLED=true
MJND_AGENT_VERSION=2.0.0
