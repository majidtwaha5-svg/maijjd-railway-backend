  /**
   * Process incoming customer message and generate appropriate response
   */
  async processMessage(message, userContext = {}) {
    try {
      // Update context with user information
      this.context.currentUser = userContext;
      
      // Add to conversation history
      this.context.conversationHistory.push({
        timestamp: new Date(),
        user: message,
        agent: null
      });

      // Analyze message intent
      const intent = this.analyzeIntent(message);
      console.log('üîß MJND Agent - Message:', message);
      console.log('üîß MJND Agent - Detected Intent:', intent);
      
      // Generate response based on intent
      const response = await this.generateResponse(intent, message, userContext);
      
      // Add response to conversation history
      this.context.conversationHistory[this.context.conversationHistory.length - 1].agent = response;
      
      return {
        success: true,
        response: response,
        intent: intent,
        timestamp: new Date(),
        agent: this.name
      };
    } catch (error) {
      console.error('Error processing message:', error);
      return {
        success: false,
        error: 'Sorry, I encountered an error. Please try again or contact support.',
        timestamp: new Date(),
        agent: this.name
      };
    }
  }

  /**
   * Analyze user intent from message
   */
  analyzeIntent(message) {
    console.log('üîß ANALYZE INTENT CALLED with message:', message);
    const lowerMessage = message.toLowerCase().trim();
    
    // Greeting patterns - exact matches first
    if (lowerMessage === 'hi' || lowerMessage === 'hello' || lowerMessage === 'hey' || 
        lowerMessage === 'good morning' || lowerMessage === 'good afternoon' || 
        lowerMessage === 'good evening' || lowerMessage.startsWith('hello') || 
        lowerMessage.startsWith('hi there') || lowerMessage.startsWith('hey there')) {
      return 'greeting';
    }
    
    // Software inquiries - specific patterns first
    if (lowerMessage.includes('what software') || lowerMessage.includes('software categories') ||
        lowerMessage.includes('what programs') || lowerMessage.includes('programming tools') ||
        lowerMessage.includes('development tools') || lowerMessage.includes('software solutions') ||
        lowerMessage.includes('applications') || lowerMessage.includes('software portfolio') ||
        lowerMessage.includes('software offerings') || lowerMessage.includes('available software') ||
        lowerMessage.includes('software catalog') || lowerMessage.includes('software library')) {
      return 'software';
    }
    
    // Services inquiries - specific patterns first
    if (lowerMessage.includes('what services') || lowerMessage.includes('tell me about services') ||
        lowerMessage.includes('professional services') || lowerMessage.includes('consulting services') ||
        lowerMessage.includes('development services') || lowerMessage.includes('custom development') ||
        lowerMessage.includes('web development') || lowerMessage.includes('mobile development') ||
        lowerMessage.includes('create website') || lowerMessage.includes('build website') ||
        lowerMessage.includes('website development') || lowerMessage.includes('app development') ||
        lowerMessage.includes('software development') || lowerMessage.includes('custom software') ||
        lowerMessage.includes('web application') || lowerMessage.includes('mobile application') ||
        lowerMessage.includes('cloud services') || lowerMessage.includes('devops services') ||
        lowerMessage.includes('ai services') || lowerMessage.includes('machine learning services') ||
        lowerMessage.includes('data analytics') || lowerMessage.includes('cybersecurity services') ||
        lowerMessage.includes('ui/ux design') || lowerMessage.includes('quality assurance') ||
        lowerMessage.includes('technical consulting') || lowerMessage.includes('architecture services')) {
      return 'services';
    }
    
    // Pricing inquiries - specific patterns first
    if (lowerMessage.includes('how much') || lowerMessage.includes('what does it cost') ||
        lowerMessage.includes('pricing plans') || lowerMessage.includes('subscription plans') ||
        lowerMessage.includes('payment options') || lowerMessage.includes('billing information') ||
        lowerMessage.includes('cost breakdown') || lowerMessage.includes('price list') ||
        lowerMessage.includes('free trial') || lowerMessage.includes('free tier') ||
        lowerMessage.includes('enterprise pricing') || lowerMessage.includes('custom pricing')) {
      return 'pricing';
    }
    
    // Support inquiries - specific patterns first
    if (lowerMessage.includes('technical support') || lowerMessage.includes('customer support') ||
        lowerMessage.includes('contact support') || lowerMessage.includes('get help') ||
        lowerMessage.includes('report bug') || lowerMessage.includes('report issue') ||
        lowerMessage.includes('troubleshoot') || lowerMessage.includes('fix problem') ||
        lowerMessage.includes('resolve issue') || lowerMessage.includes('error message') ||
        lowerMessage.includes('not working') || lowerMessage.includes('broken') ||
        lowerMessage.includes('support ticket') || lowerMessage.includes('help desk') ||
        lowerMessage.includes('bug report') || lowerMessage.includes('error report') ||
        lowerMessage.includes('system error') || lowerMessage.includes('application error') ||
        lowerMessage.includes('login problem') || lowerMessage.includes('access issue') ||
        lowerMessage.includes('connection problem') || lowerMessage.includes('performance issue')) {
      return 'support';
    }
    
    // Features inquiries - specific patterns first
    if (lowerMessage.includes('what features') || lowerMessage.includes('key features') ||
        lowerMessage.includes('platform features') || lowerMessage.includes('capabilities') ||
        lowerMessage.includes('functionality') || lowerMessage.includes('what can it do') ||
        lowerMessage.includes('how does it work') || lowerMessage.includes('benefits') ||
        lowerMessage.includes('advantages') || lowerMessage.includes('special features') ||
        lowerMessage.includes('unique features') || lowerMessage.includes('main features')) {
      return 'features';
    }
    
    // Broader keyword matching (less specific)
    if (lowerMessage.includes('software') || lowerMessage.includes('program') || 
        lowerMessage.includes('application') || lowerMessage.includes('app') || 
        lowerMessage.includes('tool') || lowerMessage.includes('platform')) {
      return 'software';
    }
    
    if (lowerMessage.includes('service') || lowerMessage.includes('development') || 
        lowerMessage.includes('consulting') || lowerMessage.includes('create') ||
        lowerMessage.includes('build') || lowerMessage.includes('design')) {
      return 'services';
    }
    
    if (lowerMessage.includes('price') || lowerMessage.includes('cost') || 
        lowerMessage.includes('free') || lowerMessage.includes('payment') || 
        lowerMessage.includes('pricing') || lowerMessage.includes('subscription') ||
        lowerMessage.includes('plan') || lowerMessage.includes('billing')) {
      return 'pricing';
    }
    
    // Only match support keywords if they're in specific contexts
    if ((lowerMessage.includes('help') && (lowerMessage.includes('with') || lowerMessage.includes('me') || lowerMessage.includes('problem') || lowerMessage.includes('issue'))) ||
        (lowerMessage.includes('support') && (lowerMessage.includes('need') || lowerMessage.includes('get') || lowerMessage.includes('contact'))) ||
        lowerMessage.includes('contact') || lowerMessage.includes('assistance') ||
        lowerMessage.includes('problem') || lowerMessage.includes('issue') ||
        lowerMessage.includes('trouble') || lowerMessage.includes('error') ||
        lowerMessage.includes('bug') || lowerMessage.includes('how to') ||
        lowerMessage.includes('tutorial') || lowerMessage.includes('guide')) {
      return 'support';
    }
    
    if (lowerMessage.includes('feature') || lowerMessage.includes('capability') || 
        lowerMessage.includes('what can') || lowerMessage.includes('functionality') || 
        lowerMessage.includes('what does') || lowerMessage.includes('how does') ||
        lowerMessage.includes('benefits') || lowerMessage.includes('advantages')) {
      return 'features';
    }
    
    // General questions that should be treated as general, not support
    if (lowerMessage === 'help' || lowerMessage === 'could you help me' || 
        lowerMessage === 'can you help me' || lowerMessage === 'help me' ||
        lowerMessage.includes('what can you do') || lowerMessage.includes('what do you do') ||
        lowerMessage.includes('tell me about') || lowerMessage.includes('i need') ||
        lowerMessage.includes('i want') || lowerMessage.includes('i am looking for') ||
        lowerMessage.includes('i need help with') || lowerMessage.includes('can you assist') ||
        lowerMessage.includes('what are your') || lowerMessage.includes('do you have') ||
        lowerMessage.includes('show me') || lowerMessage.includes('explain') ||
        lowerMessage.includes('information about') || lowerMessage.includes('more about')) {
      return 'general';
    }
    
    // Default to general inquiry
    return 'general';
  }

  /**
   * Generate response based on intent
   */
  async generateResponse(intent, message, userContext) {
    const responses = this.responses[intent] || this.responses.greeting;
    
    // Select random response from available options
    const selectedResponse = responses[Math.floor(Math.random() * responses.length)];
    
    // Customize response based on user context
    let customizedResponse = selectedResponse;
    
    // Add personalization if user is authenticated
    if (userContext.isAuthenticated) {
      customizedResponse = `Hello ${userContext.name || 'there'}! ${customizedResponse}`;
    }
    
    // Add relevant links based on intent
    if (intent === 'software') {
      customizedResponse += `\n\nüîó Explore our software categories: https://maijjd.com/software-dashboard`;
    } else if (intent === 'services') {
      customizedResponse += `\n\nüîó View our services: https://maijjd.com/services`;
    } else if (intent === 'pricing') {
      customizedResponse += `\n\nüîó Check our pricing: https://maijjd.com/pricing`;
    } else if (intent === 'support') {
      customizedResponse += `\n\nüîó Get support: https://maijjd.com/support`;
    }
    
    return customizedResponse;
  }

  /**
   * Get conversation history
